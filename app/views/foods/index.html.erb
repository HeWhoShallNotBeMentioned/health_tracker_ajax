<p id="notice"><%= notice %></p>

<h1>Listing Foods</h1>
<%= form_tag foods_path, :method => 'get', :id => "foods_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
  <div id="foods"><%= render "foods" %></div>
<% end %>
<table>
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th><%= sortable "calories" %></th>
      <th><%= sortable "created_at" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.calories %></td>
        <td><%= food.created_at %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

